{
    "name": "brigade-vscode",
    "displayName": "Brigade",
    "description": "Brigade - event-driven scripting for Kubernetes",
    "version": "0.0.1",
    "publisher": "ms-kubernetes-tools",
    "icon": "images/brigade.png",
    "engines": {
        "vscode": "^1.35.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:brigade.get",
        "onCommand:brigade.runProject",
        "onCommand:brigade.rerunBuild",
        "onCommand:brigade.refreshProjectExplorer",
        "onView:brigade.projects"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": {
            "title": "Brigade",
            "properties": {
                "brigade": {
                    "type": "object",
                    "description": "Brigade configuration",
                    "properties": {
                        "brig-path": {
                            "type": "string",
                            "description": "File path to a brig binary"
                        },
                        "namespace": {
                            "type": "string",
                            "description": "Namespace where Brigade is configured in your cluster"
                        }
                    }
                }
            }
        },
        "commands": [
            {
                "command": "brigade.get",
                "title": "Get",
                "category": "Brigade"
            },
            {
                "command": "brigade.runProject",
                "title": "Run",
                "category": "Brigade"
            },
            {
                "command": "brigade.rerunBuild",
                "title": "Rerun",
                "category": "Brigade"
            },
            {
                "command": "brigade.refreshProjectExplorer",
                "title": "Refresh Project Explorer",
                "category": "Brigade",
                "icon": {
                    "light": "images/light/refresh.svg",
                    "dark": "images/dark/refresh.svg"
                }
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "brigadeView",
                    "title": "Brigade",
                    "icon": "images/logo.svg"
                }
            ]
        },
        "views": {
            "brigadeView": [
                {
                    "id": "brigade.projects",
                    "name": "Projects"
                }
            ]
        },
        "menus": {
            "commandPalette": [
                {
                    "command": "brigade.get",
                    "when": ""
                }
            ],
            "view/title": [
                {
                    "command": "brigade.refreshProjectExplorer",
                    "when": "view == brigade.projects",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "brigade.get",
                    "when": "view == brigade.projects && viewItem =~ /gettable/",
                    "group": "0"
                },
                {
                    "command": "brigade.runProject",
                    "when": "view == brigade.projects && viewItem =~ /brigade\\.project/",
                    "group": "1"
                },
                {
                    "command": "brigade.rerunBuild",
                    "when": "view == brigade.projects && viewItem =~ /brigade\\.build/ && viewItem =~ /rerunnable/",
                    "group": "1"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^3.5.2",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "@types/shelljs": "^0.8.5",
        "shelljs": "^0.8.3"
    }
}

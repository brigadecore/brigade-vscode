{
    "name": "brigade-vscode",
    "displayName": "Brigade",
    "description": "Brigade - event-driven scripting for Kubernetes",
    "version": "0.0.1",
    "publisher": "ms-kubernetes-tools",
    "engines": {
        "vscode": "^1.35.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.sayHello",
        "onView:brigade.projects"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.sayHello",
                "title": "Hello World"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "brigadeView",
                    "title": "Brigade",
                    "icon": "images/logo.svg"
                }
            ]
        },
        "views": {
            "brigadeView": [
                {
                    "id": "brigade.projects",
                    "name": "Projects"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}
